      },
      "response": [],
      "event": [ { "listen": "test", "script": { "exec": [ "pm.test('Status is 200', function () { pm.response.to.have.status(200); });", "var json = pm.response.json();", "pm.test('status updated', function () { pm.expect(json.status).to.eql('SUSPENDED'); });" ], "type": "text/javascript" } } ]
    },
