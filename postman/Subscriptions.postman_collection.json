    {
      "name": "Update Subscription (ADMIN)",
      "request": {
        "method": "PATCH",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "{{authToken}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"status\": \"SUSPENDED\",\n  \"autoRenew\": false\n}" },
