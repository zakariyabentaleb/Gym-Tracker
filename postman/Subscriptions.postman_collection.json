{
  "info": {
    "name": "Gym-Tracker - Subscriptions",
    "_postman_id": "b9f4c8d0-0000-4000-8000-000000000000",
    "description": "Collection to test Subscription endpoints (create, list, get, update, renew). Set environment variables: baseUrl, authToken",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Subscription (ADMIN)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "{{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"memberId\": 7,\n  \"planId\": 2,\n  \"startDate\": \"2026-02-13\",\n  \"autoRenew\": true\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/subscriptions", "host": ["{{baseUrl}}"], "path": ["api","subscriptions"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 201', function () { pm.response.to.have.status(201); });",
              "var json = pm.response.json();",
              "pm.test('Has id', function () { pm.expect(json.id).to.exist; });",
              "pm.test('MemberId matches', function () { pm.expect(json.memberId).to.eql(7); });",
              "pm.test('Status is ACTIVE', function () { pm.expect(json.status).to.eql('ACTIVE'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Subscription for me (MEMBER)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
