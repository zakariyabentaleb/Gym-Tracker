        },
        "url": { "raw": "{{baseUrl}}/api/subscriptions/me", "host": ["{{baseUrl}}"], "path": ["api","subscriptions","me"] }
      },
      "response": [],
      "event": [ { "listen": "test", "script": { "exec": [ "pm.test('Status is 201', function () { pm.response.to.have.status(201); });" ], "type": "text/javascript" } } ]
    },
